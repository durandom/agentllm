# Containerfile for OAuth Callback Server
# Provides a generic OAuth callback endpoint for multiple providers

FROM python:3.11-slim

# Install system dependencies including curl for healthchecks
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install uv for fast dependency management
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Set working directory
WORKDIR /app

# Layer 1: Copy dependency files and source structure (needed for uv sync)
COPY pyproject.toml uv.lock README.md ./
COPY src/ ./src/

# Layer 2: Install dependencies (cached until dependencies or source structure change)
RUN uv sync --locked --no-dev

# Layer 3: Copy agentllm package to /app/agentllm for Python imports
COPY src/agentllm /app/agentllm

# Create directories for runtime data persistence
RUN mkdir -p /app/tmp

# Set Python environment
ENV PYTHONPATH=/app \
    PYTHONUNBUFFERED=1 \
    PATH="/app/.venv/bin:$PATH" \
    AGENTLLM_DATA_DIR=/app/tmp \
    OAUTH_CALLBACK_PORT=8501

# Expose OAuth callback port
EXPOSE 8501

# Reset the entrypoint, don't invoke `uv`
ENTRYPOINT []

# Run OAuth callback server
CMD ["python", "-m", "agentllm.oauth_callback.main"]
